<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    

    <!-- Özel CSS -->
    <link rel="stylesheet" href="/css/layout/HomeLayout.css">
    <title>Ürün Listesi</title>
</head>

<body class="bg-dark text-light">
    <header class="header">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black sticky-top">
        <div class="container-fluid">
            <!-- Marka ve Logo -->
            <a class="navbar-brand" href="#">
                <img src="~/image/indir.png" alt="Logo" width="50" height="50" class="me-2 logo">
            </a>
            <!-- Mobil Menü Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("HomePage", "Home")">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Cart", "Cart")">Sepet</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("UserGetOrders", "Order")">Siparişlerim</a></li>
                </ul>

                <!-- Sağ Menü -->
                <ul class="navbar-nav ms-auto">
                    <!-- Hesabım Menüsü -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> Hesabım
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="accountDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("UserProfile", "User")">Profil</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Register", "Auth")">Çıkış Yap</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    </header>

    <!-- Ana İçerik -->
    @RenderBody()

    <!-- Footer -->
    <footer class="bg-dark text-light py-3 mt-4">
        <div class="container text-center">
            <p>&copy; 2024 Firma Adı - Tüm Hakları Saklıdır</p>
        </div>
    </footer>

    <!-- Bootstrap Bundle JS (Popper Dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-kin6M4tNQkD20BRMIlZmVBtOM60r9OIpVY0QoZBEIzRfxzOGOfTOgCHoeFI1Ggsb" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Ekstra JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log("Sayfa yüklendi ve scriptler çalışıyor.");
        });
    </script>
</body>

</html>
